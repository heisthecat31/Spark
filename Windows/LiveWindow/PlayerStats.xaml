<UserControl x:Class="Spark.PlayerStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="900"
             d:DesignWidth="1400"
             Background="#2b2b2b"
             FontSize="16"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    
    <UserControl.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1e1e1e"/>
            <Setter Property="Margin" Value="10,6"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#cccccc"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="9"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#232323"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2d2d2d"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="LeaderboardRowStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="10,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2d2d2d"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#232323"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5,5"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0" 
                Background="#1e1e1e" 
                CornerRadius="8" 
                Margin="20,20,10,20"
                BorderBrush="#404040"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Leaderboard Header -->
                <Border Grid.Row="0" 
                        Background="#232323" 
                        CornerRadius="8,8,0,0"
                        Padding="15">
                    <Grid>
                        <TextBlock Text="ðŸ† Player Leaderboard" 
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#ffffff"
                                   VerticalAlignment="Center"/>
                        
                        <TextBlock x:Name="LeaderboardStatusText" 
                                   Text="Loading..."
                                   FontSize="9"
                                   Foreground="#cccccc"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </Border>
                
                <!-- Leaderboard List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="LeaderboardList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource LeaderboardRowStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Rank -->
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding Rank}"
                                                   FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="#ffffff"
                                                   VerticalAlignment="Center"/>
                                        
                                        <!-- Player Name -->
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Name}"
                                                   FontSize="11"
                                                   Foreground="#cccccc"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>
                                        
                                        <!-- Win Count -->
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding WinCount}"
                                                   FontSize="11"
                                                   FontWeight="Bold"
                                                   Foreground="#60a5fa"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Search Box -->
                <Border Grid.Row="2" 
                        Background="#232323" 
                        CornerRadius="0,0,8,8"
                        Padding="15,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="LeaderboardSearchBox" 
                                 Grid.Column="0"
                                 Background="#1e1e1e"
                                 Foreground="#ffffff"
                                 BorderBrush="#404040"
                                 BorderThickness="1"
                                 Padding="10,8"
                                 FontSize="11"
                                 TextChanged="LeaderboardSearchBox_TextChanged">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                                        CornerRadius="4">
                                                    <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        
                        <Button Grid.Column="1" 
                                Content="ðŸ”"
                                Margin="10,0,0,0"
                                Width="40"
                                Background="#1e1e1e"
                                Foreground="#ffffff"
                                BorderBrush="#404040"
                                BorderThickness="1"
                                Cursor="Hand"
                                Click="RefreshLeaderboard_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        
        <!-- Right Panel: Player Statistics -->
        <Border Grid.Column="1" 
                Background="#1e1e1e" 
                CornerRadius="8" 
                Margin="10,20,20,20"
                BorderBrush="#404040"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Player Search Header -->
                <Border Grid.Row="0" 
                        Background="#232323" 
                        CornerRadius="8,8,0,0"
                        Padding="15">
                    <Grid>
                        <TextBlock Text="ðŸ‘¤ Player Statistics" 
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#ffffff"
                                   VerticalAlignment="Center"/>
                        
                        <TextBlock x:Name="PlayerStatusText" 
                                   Text="Enter Discord ID to search"
                                   FontSize="9"
                                   Foreground="#cccccc"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </Border>
                
                <!-- Search Input -->
                <Border Grid.Row="1" 
                        Background="#1e1e1e"
                        Padding="15,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBox x:Name="DiscordIdInput" 
                                     Width="300"
                                     Background="#232323"
                                     Foreground="#ffffff"
                                     BorderBrush="#404040"
                                     BorderThickness="1"
                                     Padding="10,8"
                                     FontSize="11"
                                     Text="Enter Discord ID"
                                     GotFocus="DiscordIdInput_GotFocus"
                                     LostFocus="DiscordIdInput_LostFocus">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="{TemplateBinding BorderThickness}" 
                                                            CornerRadius="4">
                                                        <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            
                            <Button x:Name="SearchPlayerButton" 
                                    Content="Search"
                                    Margin="10,0,0,0"
                                    Padding="20,8"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    FontSize="11"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    BorderThickness="0"
                                    Click="SearchPlayerButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Player Statistics Display -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="PlayerStatsGrid" Visibility="Hidden">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Player Header -->
                        <Border Grid.Row="0" 
                                Background="#232323"
                                Padding="20,15"
                                Margin="15,15,15,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Avatar Placeholder -->
                                <Border Grid.Column="0" 
                                        Width="60" 
                                        Height="60"
                                        Background="#404040"
                                        CornerRadius="30"
                                        Margin="0,0,15,0">
                                    <TextBlock Text="ðŸ‘¤"
                                               FontSize="24"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                
                                <!-- Player Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock x:Name="PlayerNameText" 
                                               Text="Player Name"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="#ffffff"/>
                                    
                                    <TextBlock x:Name="PlayerRankText" 
                                               Text="Global Rank: --"
                                               FontSize="11"
                                               Foreground="#cccccc"
                                               Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <!-- Stats Summary -->
                                <Border Grid.Column="2" 
                                        Background="#1e1e1e"
                                        CornerRadius="6"
                                        Padding="15,10"
                                        BorderBrush="#404040"
                                        BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Total Wins"
                                                   FontSize="9"
                                                   Foreground="#cccccc"/>
                                        <TextBlock x:Name="TotalWinsText" 
                                                   Text="0"
                                                   FontSize="24"
                                                   FontWeight="Bold"
                                                   Foreground="#60a5fa"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Quick Stats -->
                        <WrapPanel Grid.Row="1" 
                                   HorizontalAlignment="Center"
                                   Margin="15,0,15,15">
                            <Border Style="{StaticResource StatCardStyle}" Width="150">
                                <StackPanel>
                                    <TextBlock Text="ðŸ† Arena Wins"
                                               FontSize="9"
                                               Foreground="#cccccc"/>
                                    <TextBlock x:Name="ArenaWinsText" 
                                               Text="0"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="#ffffff"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Style="{StaticResource StatCardStyle}" Width="150">
                                <StackPanel>
                                    <TextBlock Text="ðŸ¥… Saves"
                                               FontSize="9"
                                               Foreground="#cccccc"/>
                                    <TextBlock x:Name="SavesText" 
                                               Text="0"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="#ffffff"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Style="{StaticResource StatCardStyle}" Width="150">
                                <StackPanel>
                                    <TextBlock Text="âš½ Goals"
                                               FontSize="9"
                                               Foreground="#cccccc"/>
                                    <TextBlock x:Name="GoalsText" 
                                               Text="0"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="#ffffff"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Style="{StaticResource StatCardStyle}" Width="150">
                                <StackPanel>
                                    <TextBlock Text="ðŸ’« Stuns"
                                               FontSize="9"
                                               Foreground="#cccccc"/>
                                    <TextBlock x:Name="StunsText" 
                                               Text="0"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="#ffffff"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                        
                        <!-- All Statistics Grid -->
                        <Border Grid.Row="2" 
                                Background="#232323"
                                CornerRadius="8"
                                Padding="20"
                                Margin="15,0,15,15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Text="ðŸ“Š All Statistics"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="#ffffff"
                                           Margin="0,0,0,15"/>
                                
                                <ItemsControl x:Name="AllStatsList" Grid.Row="1">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="10,8" 
                                                    Background="Transparent">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="150"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" 
                                                               Text="{Binding StatName}"
                                                               FontSize="11"
                                                               Foreground="#cccccc"
                                                               VerticalAlignment="Center"/>
                                                    
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding StatValue}"
                                                               FontSize="11"
                                                               FontWeight="Bold"
                                                               Foreground="#ffffff"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Right"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
