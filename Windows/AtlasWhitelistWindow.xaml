<Window x:Class="Spark.AtlasWhitelistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:p="clr-namespace:Spark.Properties"
        xmlns:l="clr-namespace:Spark"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.atlas_whitelist_title}" 
		Height="600" Width="550" 
		MinWidth="500" MinHeight="300"
		Background="#232323" 
		FontSize="16" 
		WindowStartupLocation="CenterOwner" 
		ResizeMode="CanResizeWithGrip" 
		DataContext="{Binding 
		RelativeSource={RelativeSource Self}}"
        Icon="/img/ignite_logo.ico">
    
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#ffaac9"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ffaac9"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#272727"/>
            <Setter Property="Foreground" Value="#ffaac9"/>
            <Setter Property="BorderBrush" Value="#c32b61"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="5,2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2d2d2d"/>
                                <Setter Property="Foreground" Value="#ffffff"/>
                                <Setter Property="BorderBrush" Value="#ea6192"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#c32b61"/>
                                <Setter Property="Foreground" Value="#ffffff"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#1a1a1a"/>
                                <Setter Property="Foreground" Value="#888888"/>
                                <Setter Property="BorderBrush" Value="#444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Foreground" Value="#ffaac9"/>
            <Setter Property="BorderBrush" Value="#c32b61"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="#ea6192"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>
    
	<Grid Background="#232323">
		<Grid.RowDefinitions>
			<RowDefinition Height="132"/>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="40"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>

		<StackPanel Grid.ColumnSpan="2" Background="Transparent">
			<Label Content="{x:Static p:Resources.Atlas_Whitelist}" 
                   FontSize="20" 
                   Margin="10,10,10,4" 
                   Foreground="#ea6192"
                   FontWeight="Bold"/>
			<TextBlock Text="{x:Static p:Resources.Set_your_match_visibility_to_something_other_than_Public__then_add_teams_and_players_here_to_give_them_access_}" 
                      TextWrapping="Wrap" 
                      Margin="10,10,10,10" 
                      Background="#272727" 
                      Padding="10,10,10,10"
                      Foreground="#ffaac9"/>
		</StackPanel>
		
        <!-- Teams Section -->
		<Border Grid.Row="1" Grid.Column="0" 
                Margin="10,10,5,10" 
                Background="#272727" 
                BorderBrush="#c32b61" 
                BorderThickness="1"
                CornerRadius="3">
            <StackPanel Margin="5">
                <Label Content="{x:Static p:Resources.Add_Team}" 
                       Foreground="#ffaac9" 
                       FontWeight="SemiBold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="teamNameInput" 
                             KeyDown="AddTeamKeyPress"
                             Background="#1a1a1a"
                             Foreground="#ffaac9"
                             BorderBrush="#c32b61"/>
                    <Button Content="{x:Static p:Resources.Add}" 
                            Grid.Column="1" 
                            Click="AddTeamClicked"
                            Background="#272727"
                            Foreground="#ffaac9"
                            BorderBrush="#c32b61"/>
                </Grid>
                <Border Margin="0,10,0,0" 
                        BorderBrush="#c32b61" 
                        BorderThickness="0,1,0,0" 
                        Padding="0,5,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled"
                                  MaxHeight="250">
                        <StackPanel x:Name="teamList"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>
		</Border>
        
        <!-- Players Section -->
		<Border Grid.Row="1" Grid.Column="1" 
                Margin="5,10,10,10" 
                Background="#272727" 
                BorderBrush="#c32b61" 
                BorderThickness="1"
                CornerRadius="3">
            <StackPanel Margin="5">
                <Label Content="{x:Static p:Resources.Add_Player}"
                       Foreground="#ffaac9" 
                       FontWeight="SemiBold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="playerNameInput" 
                             KeyDown="AddPlayerKeyPress"
                             Background="#1a1a1a"
                             Foreground="#ffaac9"
                             BorderBrush="#c32b61"/>
                    <Button Content="{x:Static p:Resources.Add}" 
                            Grid.Column="1" 
                            Click="AddPlayerClicked"
                            Background="#272727"
                            Foreground="#ffaac9"
                            BorderBrush="#c32b61"/>
                </Grid>
                <Border Margin="0,10,0,0" 
                        BorderBrush="#c32b61" 
                        BorderThickness="0,1,0,0" 
                        Padding="0,5,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled"
                                  MaxHeight="250">
                        <StackPanel x:Name="playerList"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>
		</Border>

		<Button Content="{x:Static p:Resources.Close}" 
                Width="100" 
                Height="30" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right" 
                Margin="10,0,10,10" 
                Click="CloseButtonEvent" 
                Grid.Row="2" 
                Grid.Column="1"
                Background="#272727"
                Foreground="#ffaac9"
                BorderBrush="#c32b61"/>
	</Grid>
</Window>