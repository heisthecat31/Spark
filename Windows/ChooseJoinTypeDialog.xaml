<Window x:Class="Spark.ChooseJoinTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Spark.Properties"
        xmlns:l="clr-namespace:Spark"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.Join_EchoVR_Match}"
        Height="290" Width="530"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Icon="/img/ignite_logo.ico"
        Background="#FFc32b61"
        FontSize="16"
        Closed="CloseButtonClicked">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFea6192"/>
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
            <Setter Property="BorderBrush" Value="#FFc32b61"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="5,2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFffaac9"/>
                                <Setter Property="Foreground" Value="#FF000000"/>
                                <Setter Property="BorderBrush" Value="#FFea6192"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFc32b61"/>
                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFb85a7d"/>
                                <Setter Property="Foreground" Value="#FF888888"/>
                                <Setter Property="BorderBrush" Value="#FF9a4d6e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFFFF"/>
        </Style>
        <Style TargetType="Separator">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Height" Value="1"/>
        </Style>
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="#FFffaac9"/>
        </Style>
    </Window.Resources>
    
    <StackPanel Background="#FFc32b61">
        <Grid Height="150" Background="#FFc32b61">
            <!-- Team Selection Buttons -->
            <StackPanel Orientation="Horizontal" Background="#FFc32b61">
                <Button x:Name="OrangeButton" Width="100" Height="74" Margin="10,0,0,10"
                        Content="{x:Static p:Resources.orange_caps}" Click="JoinOrangeTeam" HorizontalAlignment="Left"
                        VerticalAlignment="Bottom" Background="#FFea6192" BorderBrush="#FFc32b61" Foreground="#FFFFFFFF"/>
                <Button x:Name="RandomButton" Width="100" Height="74" Margin="5,0,0,10"
                        Click="JoinRandomTeam" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                        HorizontalContentAlignment="Center" Background="#FFea6192" BorderBrush="#FFc32b61" Foreground="#FFFFFFFF">
                    <TextBlock TextAlignment="Center" Foreground="#FFFFFFFF">
                        Random
                        <LineBreak />
                        Team
                    </TextBlock>
                </Button>
                <Button x:Name="BlueButton" Width="100" Height="74" Margin="5,0,0,10"
                        Content="{x:Static p:Resources.blue_caps}" Click="JoinBlueTeam" HorizontalAlignment="Left"
                        VerticalAlignment="Bottom" Background="#FFea6192" BorderBrush="#FFc32b61" Foreground="#FFFFFFFF"/>
            </StackPanel>
            
            <Button x:Name="spectatorButton" Margin="0,0,10,10" Width="180" Height="50"
                    Content="{x:Static p:Resources.join_as_spectator}" Click="JoinAsSpectatorClicked"
                    VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.RowSpan="1"/>
                    
            <CheckBox x:Name="noovrCheckbox" Width="180" Content="{x:Static p:Resources.noovrCheckbox_Content}"
                      IsChecked="{l:SettingBinding sparkLinkNoOVR}" VerticalAlignment="Bottom"
                      HorizontalAlignment="Right" Margin="0,0,10,65" FontSize="13"
                      Foreground="#FFFFFFFF">
            </CheckBox>
            
            <Label x:Name="label" Content="{x:Static p:Resources.Join_as_a_Player_or_as_a_Spectator_}"
                   Margin="0,19,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" 
                   Grid.RowSpan="1" Height="32" Foreground="#FFFFFFFF"/>
        </Grid>
        
        <StackPanel Margin="40,0,40,20" Background="#FFc32b61">
            <Separator Background="#FFFFFFFF"/>
            <TextBlock x:Name="EchoVRDetectedLabel" Foreground="#FFffaac9" TextWrapping="Wrap" 
                       Height="35" FontSize="13" Margin="0,10,0,4" 
                       Text="{x:Static p:Resources.Detecting_Echo_VR___}">
            </TextBlock>
            <StackPanel Orientation="Horizontal" Background="#FFc32b61">
                <CheckBox x:Name="ForceLaunchCheckbox" Content="{x:Static p:Resources.Force_launch_new_instance}"
                          IsChecked="{l:SettingBinding sparkLinkForceLaunchNewInstance}"
                          Checked="ForceLaunchChecked" Unchecked="ForceLaunchChecked"
                          Margin="0,0,0,10" FontSize="13" Foreground="#FFFFFFFF">
                </CheckBox>
                <TextBlock Margin="20,0" Foreground="#FFFFFFFF">
                    <Hyperlink Click="Hyperlink_OnClick" Foreground="#FFffaac9">I'm using Quest Pro controllers.</Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>